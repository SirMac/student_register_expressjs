
    <%- include ('./include/header') %>
     
<div class="container">
    <div class='img-bg' style='margin-top:10px'>
        <div class='form-bg'>
            <h5 style='margin-bottom:20px'>Fill the form below to add new student</h5>
            <span class="bg-success"><%= success %></span>
        <form action="/students/addstudent" method="POST" enctype="multipart/form-data">
            <div class='form-group'>
                <input class='form-control' name='name' type='text' placeholder='Enter student full name' required/>
            </div>
            <div class='form-group'>
                <input class='form-control' name='course' type='text' placeholder='Enter course' required/>
            </div>
            <div class='form-group'>
                <select class='form-control' name='level' required>
                    <option value="">Select Level</option>
                    <option value="100">100</option>
                    <option value="200">200</option>
                    <option value="300">300</option>
                    <option value="400">400</option>
                </select>   
            </div>
            <div class='form-group'>
                <select class='form-control' name='gender' required>
                    <option value="">Select Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>
            <div class='form-group'>
                <input class='form-control' name='club' type='text' placeholder='Enter student club' required/>
            </div>
            <div class='form-group'>
                <select class='form-control' name='stdtype' required>
                    <option value="">Type of Student</option>
                    <option value="regular">Regular</option>
                    <option value="evening">Evening</option>
                    <option value="weekend">Weekend</option>
                </select>
            </div>
            <div class='form-group'>
                <input class='form-control' name='img' type='file' required/>
            </div>
            <button style='float:right' type='submit' class='btn btn-secondary btn-md m-2'>Add Student</button>
        </form>                   
</div>
</div>
</div>
        



    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <!-- <script src="js/owl.carousel.min.js"></script> -->
    </body>
</html>