<%- include ('./include/head') %>
     
<div class="container">
   <%- include ('./include/alerts') %>
   <div class="row mt-5">
      <div class="col-md-6 m-auto">
         <div class="card card-body">
            <h3 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h3>
         <form action='/login' method="POST">
            <div class='form-group left-addon'>
               <i class="fas fa-envelope"></i>
               <input class='form-control' name='email' type='email' placeholder='Enter your email' required/>
            </div>
            <div class='form-group left-addon'>
               <i class="fas fa-key"></i>
               <input class='form-control' name='password' type='password' placeholder='Enter your password' required/>
            </div>
            <button style='float:right' type='submit' class='btn btn-danger btn-md m-2'>Login</button>
         </form> 
   <span class="m-2">Don't have account? <a class="btn border btn-success btn-sm ml-2" href="/register">Register</a> </span>
 </div>           
</div>
</div>
</div>
   



<script src="/js/jquery-3.4.1.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
    <!-- <script src="js/fontawesome.min.js"></script> -->
</body>
</html>